<section id="main">
    <div class="col-xl-6 d-flex justify-content-center pt-5 pb-5 ">
        <div class="btn-group btn-group-toggle w-25 sales">
            <button id="daily" class="btn btn-dark active" onclick="histogram(1,'daily')">Daily</button>
            <button id="weekly" class="btn btn-dark " onclick="histogram(7,'weekly')">Weekly</button>
            <button id="monthly" class="btn btn-dark " onclick="histogram(30,'monthly')">Monthly</button>
            <button id="yearly" class="btn btn-dark " onclick="histogram(365,'yearly')">Yearly</button>
        </div>
    </div>

    <div class="d-flex" style="margin-left:10%;">
        <div class="card" style="width: 13rem; background-color: #d6e0ff;">
            <div class="card-body d-flex align-items-center">
                <div>
                    <img src="https://img.icons8.com/ios-glyphs/30/000000/delivered-box.png" />
                </div>
                <div class="ms-3" style="color:dark;">
                    <h6 class="card-title">Total Orders</h6>
                    <p class="card-text text-center h5 m-0 p-0" id="totalOrders">

                    </p>
                </div>
            </div>
        </div>
        <div class="card ms-3" style="width: 13rem; background-color: #ffd6d9;">
            <div class="card-body d-flex align-items-center">
                <div>
                    <img <img src="https://img.icons8.com/ios/30/000000/banknotes.png" />
                </div>
                <div class="ms-3" style="color: blue;">
                    <h6 class="card-title">Total Amount</h6>
                    <p class="card-text text-center h5 m-0 p-0" id="totalAmount">

                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex">
        <canvas id="order" style="width:100%;max-width:600px;margin-left: 18%; margin-top: 10%;"></canvas>

        <canvas id="payment" style="max-width:400px; margin:5%"></canvas>
    </div>
</section>