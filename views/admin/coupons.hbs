<div id="main">
    <div class="container">
        <nav class="navbar navbar-light bg-white p-3 ms-2">
            <div class="container-fluid" style="float: left;">
                <a class="navbar-brand" style="font-family: none; font-weight: 900; color: black;margin-left: 40%;">
                    <h1><strong>Coupons</strong> </h1>
                </a>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-dark mb-4" data-bs-toggle="modal"
                        data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add New Coupon</button>
                </div>
            </div>

            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Create new Coupon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <form id="addcoupon" method="post">
                                <div class=" mb-3">
                                    <input type="text" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" id="coupon" name="coupon"
                                        placeholder="Enter Coupon code" required>
                                </div>
                                <div class="mb-3">
                                    <input type="number" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" id="coupon-offer"
                                        name="couponOffer" placeholder="Enter Offer in Percentage" required>
                                </div>
                                <div class="mb-3">
                                    <input type="number" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" id="minPrice" name="minPrice"
                                        placeholder="Enter minimum price" required>
                                </div>
                                <div class="mb-3">
                                    <input type="number" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" id="maxOffer" name="maxOffer"
                                        placeholder="Enter maximum offer limit" required>
                                </div>
                                <div class="mb-3">
                                    <label for="">Expiry Date</label>
                                    <input type="date" class="form-control" aria-label="Sizing example input"
                                        aria-describedby="inputGroup-sizing-default" id="expDate" name="expDate"
                                        required>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="row height d-flex p-3">
        </div>
        <table id="table_id" class="table table-dark table-hover" style="width: 100%;margin-top: 2rem;">
            <thead>

                <tr>
                    <th>Sl No</th>
                    <th>Coupon</th>
                    <th>Offer Percent</th>
                    <th>Minimum Price</th>
                    <th>Maximum Price</th>
                    <th>Expiry Date</th>
                    <th>Action</th>
            <tbody>
                <tr>
                    {{#each coupons}}
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.coupon}}</td>
                    <td>{{this.couponOffer}}</td>
                    <td>{{this.minPrice}}</td>
                    <td>{{this.maxOffer}}</td>
                    <td>{{this.expDate}}</td>
                    <td>
                        <button class="btn btn-dark" onclick="deleteCoupon('{{this.coupon}}')"><i
                                class="fa-solid fa-trash" style="font-size: 25px;"></i></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () { $('#table_id').DataTable(); });
</script>