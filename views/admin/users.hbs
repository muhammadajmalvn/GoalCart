<div id="main">
  <div class="container">
    <nav class="navbar navbar-light bg-white p-3 ms-2" style="margin-right:-24px;">
      <div class="container-fluid" style="margin-left: 40%;">
        <a class="navbar-brand" style="font-family: none; font-weight: 900; color: black;">
          <h1>Users</h1>
        </a>

      </div>
    </nav>
    <div class="row height d-flex p-3">
    </div>
    <table class="table table-dark table-striped" style="" id="table_id">
      <thead>
        <tr>
          <th scope="col">Users</th>
          <th scope="col">Email</th>
          <th scope="col">Mobile</th>
          <th scope="col">Status</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{this.fname}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phonenumber}}</td>
          <td>
            {{#if this.status}}
            Active
            {{else}}
            Inactive
            {{/if}}
          </td>
          <td>
            {{#if this.status}}
            <a class="btn btn-danger" href="/admin/users/{{this._id}}"
              onclick="return confirm('Do you want to deactivate this user')">Block</a>
            {{else}}
            <a class="btn btn-success" href="/admin/users/{{this._id}}"
              onclick="return confirm('Do you want to activate this user')">Unblock</a>
            {{/if}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <nav aria-label="...">
    <ul class="pagination pagination-sm">
      {{#each pages}}
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/users?&p={{this}}">{{this}}</a></li>
        {{/each}}
</div>