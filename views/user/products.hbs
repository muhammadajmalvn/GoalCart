<section>
  <div class="position-fixed w-25 d-none" id="success"
    style="left:530px; top: 100px; z-index: 1000; background-color:black; border-radius:10px;">
    <p id="success-text" class="text-center mt-3" style="color:white;">Added to
      Cart</p>
  </div>
  <div class="position-fixed w-25 d-none" id="wishSuccess"
    style="left:530px; top: 100px; z-index: 1000; background-color:black; border-radius:10px;">
    <p id="success-text" class="text-center mt-3" style="color:white;">Added to
      Wishlist</p>
  </div>

  <div class="container mt-5">
    <div class="tab-content">
      <div id="tab-1" class="tab-pane fade show p-0 active">
        <div class="row g-4">
          {{#if Products}}
          {{#each Products}}
          <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <div class="product-item">
              <div class="card">
                <div class="position-relative bg-light overflow-hidden">
                  <img class="img-fluid w-100" src="{{this.image.[0]}}" alt="">
                  {{#if this.currentOffer}}
                  <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                    {{this.currentOffer}}% off</div>
                  {{else}}
                  <div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">
                    0% off</div>
                  {{/if}}
                </div>
                <div class="text-center p-4">
                  <a class="d-block h5 mb-2" href="/product-details/{{this._id}}"
                    style="color: black;">{{this.product}}</a>

                  {{#if this.wishlist}}
                  <i class="fa-solid fa-heart float-end" id="heart" style="font-size: xx-large;"
                    onclick="addToWishlist('{{this._id}}')"></i>
                  {{else}}
                  <i class="fa-solid fa-heart float-end" style="font-size: xx-large; "
                    onclick="addToWishlist('{{this._id}}')"></i>
                    {{/if}}

            {{!-- {{#if this.wishlist}}
                      <span class="card-action">
                        <a class="btn btn-xs btn-circle btn-white-primary" href="addtoWishlist('{{this._id}}')" id="heart" data-toggle="button">
                          ❤️
                        </a>
                      </span>
                      {{else}}
                      <span class="card-action">
                        <a class="btn btn-xs btn-circle btn-white-primary" href=""addtoWishlist('{{this._id}}')"  data-toggle="button">
                          <i class="fe fe-heart"></i>
                        </a>
                      </span>
                      {{/if}} --}}


                  <span class="me-1" style="color:black;"><strong>₹{{this.offerprice}}</strong></span>
                  <span class="text-body text-decoration-line-through">₹{{this.actualprice}}</span>

                </div>
                <div class="d-flex border-top">
                  <small class="w-50 text-center border-end py-2">
                    <a class="text-body" href="/product-details/{{this._id}}"><i class="fa fa-eye me-2"
                        style="color:black;"></i>View
                      detail</a>
                  </small>
                  {{#if this.stock}}
                  {{#if ../user}}
                  <small class="w-50 text-center py-2">
                    <a class="text-body" type="button" href="" onclick="addtocart('{{this._id}}')"><i
                        class="fa fa-shopping-bag me-2" style="color:black;"></i>Add to Cart
                    </a>
                  </small>
                  {{else}}
                  <small class="w-50 text-center py-2">
                    <a class="text-body" type="button" data-bs-toggle="modal" data-bs-target="#login" href=""><i
                        class="fa fa-shopping-bag me-2" style="color:royalblue;"></i>Add to
                      cart</a>
                  </small>
                  {{/if}}
                  {{else}}
                  <small class="w-50 text-center py-2">
                    <a class="text-body"><i class=" fa fa-shopping-bag me-2" style="color:royalblue;"></i>Out
                      of Stock</a>
                  </small>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
          {{/each}}
          {{else}}
          {{/if}}

        </div>
      </div>
    </div>

    <br>
    <br>
    <br>
  </div>
  <br>
  <br><br>
</section>
