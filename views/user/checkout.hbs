<div class="container-fluid">
  <div class="row">
    <aside class="col-lg-9">
      <div class="card">
        <div class="table-responsive">
          <table class="table table-borderless table-shopping-cart">
            <thead class="text-muted">
              <tr class="small text-uppercase">
                <th scope="col">Product</th>
                <th scope="col" width="120">Quantity</th>
                <th scope="col" width="120">Price</th>
                <th scope="col" width="120">Sub-Total</th>
                <th scope="col" class="text-right d-none d-md-block"></th>
              </tr>
            </thead>
            <tbody>
              {{#each cartProduct}}
              <tr>
                <td>
                  <figure class="itemside align-items-center">
                    <div class="aside"><img src="{{this.image.[0]}}" class="img-sm"></div>
                    <figcaption class="info"> <a href="#" class="title text-dark" data-abc="true">{{this.product}}</a>
                      <p class="text-muted small">CATEGORY: {{this.category}} <br> Brand: {{this.brand}}</p>
                    </figcaption>
                  </figure>
                </td>
                <td> {{this.quantity}}
                <td>
                  <div class="price-wrap"> <var class="price">₹ {{this.offerprice}}</var> </div>
                </td>
                <td>
                  <div class="price-wrap"> <var class="price">₹ {{this.subtotal}}</var> </div>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <a href="/cart" class="btn btn-out btn-primary btn-square btn-main mt-2" data-abc="true" style="width: 15%;"><i
            class="fa fa-arrow-left"></i>Back to
          cart</a>
      </div>
    </aside>

    <aside class="col-lg-3">
      <div class="card mb-3" id="couponform">
        <div class="card-body">
          <form class="card p-2" id="redeem-coupon" method="post">
            <div><small style="color:red;" id="coupon-condition"></small></div>
            <div class="input-group">
              <input type="text" class="form-control" id="coupon-form" name="coupon" placeholder="Coupon code">
              <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Apply</button>
                <div id="coupon-condition"></div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <ul>
            <li class=" list-group-item d-flex justify-content-between">

              <span>Total</span>
              <strong style="">₹ <class="" id="">{{total}}</strong>
            </li>


            <li class=" list-group-item d-flex justify-content-between">
              <span>Offer</span>
              <strong style="color:green;">-₹ <class="" id="coupon-offer"></strong>
            </li>
            <hr>

            <li class=" list-group-item d-flex justify-content-between">
              <span>Grand Total </span>
              <strong>₹ <span class="final-amount">{{total}}</span>
              </strong>
            </li>
          </ul>
        </div>
      </div>
    </aside>
  </div>
</div>

