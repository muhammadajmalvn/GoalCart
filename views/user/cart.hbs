{{#if cartCount}}
<br>
<br><br>
<div class="container" style="display: flex;">
  <div class="col-9">
    <div class="container bg-white"
      style="margin-top: 10px; border-radius: 10px; box-shadow: rgb(100 100 111 / 50%) 0px 7px 29px 0px;">

      <body>

        <main>
          <div class="basket mt-5 ">
            <div class="basket-module">
              {{!-- <label for="promo-code">Enter a promotional code</label>
              <input id="promo-code" type="text" name="promo-code" maxlength="5" class="promo-code-field">
              <button class="promo-code-cta">Apply</button> --}}
              <h2 class="fw-bold">Cart<h4>( {{cartCount}} items )</h4>
              </h2>
            </div>
            <div class="basket-labels" style="font-size: 1rem;">
              <ul>

                <li class="item">Item</li>
                <li class="price">Unit Price</li>
                <li class="quantity">Quantity</li>
                <li class="">Subtotal</li>


              </ul>
            </div>
            {{#each products}}
            <div class="basket-product">
              <div class="item">
                <div class="product-image">
                  <img src="{{this.image.[0]}}" alt="Placholder Image 2">
                </div>
                <div class="product-details">
                  <h3 style="font-weight: 600;">{{this.brand}}</h3>
                  <h1 style="font-size:20px;"><strong>{{this.product}}</strong></h1>
                </div>
              </div>
              <div class="price" style="font-size: 20px; font-weight: 600;">₹{{this.offerprice}}</div>
              <div class="quantity" style=" font-size: 20px; font-weight: 800;">
                <button class="cart-item-count"
                  onclick="changeQuantity('{{this._id}}','{{this.item}}','{{../userId}}','{{this.product}}',-1)">-</button>
                <div id="{{this.item}}" style="float:left ;">{{this.quantity}}</div>
                <button class="cart-item-count"
                  onclick="changeQuantity('{{this._id}}','{{this.item}}','{{../userId}}','{{this.product}}',1)"
                  style="float: left;">+</button>
              </div>

              <div class="subtotal" style="font-size: 20px; font-weight: 600; margin-left: -3rem;">
                <strong> ₹ <span id="{{this.product}}">{{this.subtotal}}</strong></span>
              </div>
              <div class="remove"><a href="/delete-cart-product/{{this.item}}?_method=DELETE" data-mdb-toggle="tooltip"
                  title="Remove item">
                  <button><i class="fa-solid fa-trash" style="font-size: 1.5rem;"></i></button></a>
              </div>
            </div>
            {{/each}}
          </div>
        </main>
      </body>
      <div class="ibox-content pb-3">


        <a href="/products" class="checkout-cta btn btn-primary" style="width: 25%;"><b><i
              class="fa fa-arrow-left"></i>Continue
            to
            shopping</b></a>

      </div>
    </div>
  </div>

  <div class="col-3 mt-5 my-auto">
    <div class="summary ms-5 mt-5" style=" box-shadow: rgb(100 100 111 / 20%) 0px 0px 9px 0px; margin-top: 50px">
      <div class="summary-total-items" style="font-size: 1.5rem;"><span class="total-items"></span><strong>Items in
          Bag</strong> </div>
      {{#each products}}
      <div class="summary-subtotal">
        <div class="subtotal-title w-100" style="font-weight:bold ;">{{this.product}} <span>x{{this.quantity}} No</span>
          {{!-- <div>
            ₹{{this.product.offerprice}}
          </div> --}}
        </div>
        <div class="summary-promo hide">
          <div class="promo-title">Promotion</div>
          <div class="promo-value final-value" id="basket-promo"></div>
        </div>
      </div>
      {{/each}}
      {{!-- <div class="summary-delivery">
        <select name="delivery-collection" class="summary-delivery-selection">
